<%- include('./partials/html-head') %>
<%- include('./partials/nav') %>

<main>
  <h1>Welcome, <%= user ? user.profile.name : "friend" %></h1>
  <% if (user?.profile.avatar) { %>
    <div>
      <img 
        src="<%= user.profile.avatar %>" 
        alt="<%= user.profile.name %> avatar"
      >
    </div>
  <% } %>
</main>
<a href="/posts/new" <button type="button" class="btn btn-primary">Create Post</button></a>

<body>
    <div class="container">
    <h1 class="py-4"><%= title %></h1>
    <h2 class="mb-3">All Items for Sale</h2>
    <div class="row row-cols-1 row-cols-md-2 row-cols-xl-3 g5 px-4">
      <% posts.forEach(post => { %>
        
          <img src="#" class="card-img-top" alt="...">
          <div class="card-body">
            <h5 class="card-title"><%= post.title %></h5>
            <p class="card-text">$<%= post.price %></p>
            <p class="card-text"><small class="text-bold">Listed By: <%= post.author.name %></small></p>
            <p class="card-text"><small class="text-bold"><%= post.date %> </small></p>
          </div>
        </div>
        <a href="/posts/show/<%= post._id %>">
          <button type="button" class="btn btn-primary">Details</button>
        </a>
      <% }) %>
         
      
</body>
<%- include('./partials/footer') %>
